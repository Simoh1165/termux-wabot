	rvnz.on('qr', () => {
		console.log(color('[','white'), color('!','red'), color(']','white'), color(' Scan the qr code above'))
	})

	fs.existsSync('./rvnzxpl.json') && rvnz.loadAuthInfo('./rvnzxpl.json')
	rvnz.on('connecting', () => {
		start('2', 'Connecting...')
	})
	rvnz.on('open', () => {
		success('2', 'Connected')
	})
	await rvnz.connect({timeoutMs: 30*1000})
        fs.writeFileSync('./rvnzxpl.json', JSON.stringify(rvnz.base64EncodedAuthInfo(), null, '\t'))

